@model deanShipOfStudents.Models.Meeting

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Meeting</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Activity name
        </dt>

        <dd class="form-control">
            @Html.DisplayFor(model => model.Activity.ActivityName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateOfActivity)
        </dt>

        <dd class="form-control">
            @Html.DisplayFor(model => model.DateOfActivity)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TimeOfActivity)
        </dt>

        <dd class="form-control">
            @Html.DisplayFor(model => model.TimeOfActivity)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions text-center no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> 
        </div>
    }
</div>
