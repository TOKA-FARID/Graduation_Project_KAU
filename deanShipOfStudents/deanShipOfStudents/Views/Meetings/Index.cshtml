@model IEnumerable<deanShipOfStudents.Models.Meeting>

@{
    ViewBag.Title = "Index";
}

<h2>Meetings</h2>
@if (!User.IsInRole("trainee"))
{

    if (ViewBag.activityId != null)
    {
        <p>
            @Html.ActionLink("Create New", "Create", new { activityId = ViewBag.activityId }, new { @class = "btn btn-light" })
        </p>
    }
    else
    {
        <p>
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-light" })
        </p>

    }
}
<table class="table">
    <tr>
        <th>
            Activity name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfActivity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeOfActivity)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Activity.ActivityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfActivity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeOfActivity)
            </td>
            @if (!User.IsInRole("trainee"))
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-default" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-default" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-default" })
                </td>
}
        </tr>
    }

</table>
