
@{
    ViewBag.Title = "UploadExcel";
}

<h2>Upload  @ViewBag.type File </h2>

<ul>
    <li>to upload  @ViewBag.type File you need to download template file from <a href="~/Template/file.xlsx">here</a> first </li>
    <li>be sure to upload valid data </li>
</ul>
@if (ViewBag.data != null)
{
    var myData = ViewBag.data as Array;
    foreach (var item in myData)
    {
        <div>@Html.Raw(item)</div><br/>
    }
}
@using (Html.BeginForm("UploadExcel", "Attatchments", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="hidden" name="type" value="@ViewBag.filetype" />
    <input type="hidden" name="activityId" value="@ViewBag.activityId" />
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("excel File", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("FileUpload", new { htmlAttributes = new { @class = "form-control", @type = "file" } })
            </div>
        </div>





        <div class="form-group">
            <div class="col-md-offset-2 text-center mt-3 col-md-10">
                <input type="submit" value="Upload" class="btn btn-default" />
            </div>
        </div>
    </div>
}


